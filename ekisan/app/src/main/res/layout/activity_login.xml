<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Activities.LoginActivity">

    <Button

        android:id="@+id/userSignUp"
        android:layout_width="127dp"
        android:layout_height="64dp"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="16dp"
        android:background="#25CCF7"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userLogin"
        app:layout_constraintVertical_bias="0.222" />

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="194dp"
        android:layout_height="171dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="474dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images" />

    <EditText
        android:id="@+id/userEmail"

        android:layout_width="261dp"
        android:layout_height="64dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="8dp"
        android:background="#DAE0E2"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Email-id"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/userPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhoto"
        app:layout_constraintVertical_bias="0.0" />

    <EditText

        android:id="@+id/userPassword"
        android:layout_width="265dp"
        android:layout_height="62dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="74dp"

        android:layout_marginBottom="228dp"
        android:background="#DAE0E2"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhoto"
        app:layout_constraintVertical_bias="0.836" />

    <ProgressBar
        android:id="@+id/Loginpg"
        style="?android:attr/progressBarStyle"
        android:layout_width="117dp"
        android:layout_height="62dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button

        android:id="@+id/userLogin"
        android:layout_width="127dp"
        android:layout_height="64dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="171dp"
        android:background="#25CCF7"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>